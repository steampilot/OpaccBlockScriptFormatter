{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: compile",
      "type": "shell",
      "command": "npm",
      "args": ["run", "compile"],
      "problemMatcher": "$tsc",
      "isBackground": false,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "npm: watch",
      "type": "shell",
      "command": "npm",
      "args": ["run", "watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "silent"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "npm: package",
      "type": "shell",
      "command": "npm",
      "args": ["run", "package"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
